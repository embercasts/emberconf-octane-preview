<div class="slide-out-bg"></div>
<div class="slide-out">
  <div class="slide-out-card">
    {{#link-to "book.detail" this.model.book.id class="btn-back"}}
      <span class="sr-only">Back</span>
    {{/link-to}}

    <div class="slide-out-heading">
      <div class="title">
        <h3>Editing {{this.model.book.title}}</h3>
      </div>
    </div>

    <div class="slide-out-content">
      <BookForm @book={{this.model.book}} @authors={{this.model.authors}} @onsubmit={{action this.saveBook}} />
    </div>
  </div>
</div>
