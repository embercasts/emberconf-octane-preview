<div class="slide-out-bg"></div>
<div class="slide-out">
  <div class="slide-out-card">
    {{#link-to "book" class="btn-back"}}
      <div class="sr-only">Back</div>
    {{/link-to}}

    <div class="slide-out-heading">
      <div class="title">
        <h3>{{this.model.title}}</h3>

        <div class="actions">
          {{#link-to "book.edit" this.model.id class="btn-pop"}}edit{{/link-to}}
          <button class="btn-recessed" type="button" {{action this.addToCart}}>Add To Cart</button>
        </div>
      </div>

      <div class="details">
        <p>
          <strong>Author:</strong>

          {{#link-to "author.detail" this.model.author.id}}
            {{this.model.author.last}}, {{this.model.author.first}}
          {{/link-to}}
        </p>
        <p>
          <strong>Publish Date:</strong>

          {{moment-format this.model.publishDate "MMMM Do YYYY"}}
        </p>
        <p>
          <strong>ISBN:</strong>

          {{this.model.isbn}}
        </p>
        <p>
          <strong>Added By:</strong>

          {{this.model.username}}
        </p>
        <p>
          <strong>Average Rating:</strong>

          {{round-number this.model.averageRating}}
        </p>
      </div>
    </div>


    {{outlet}}
  </div>
</div>
